    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_marginTop="195dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="7dp"
        android:layout_height="180dp"
        app:cardCornerRadius="15dp"
        android:background="@color/card_grey"
        app:cardBackgroundColor="@color/card_grey">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:stretchColumns= "1,2,3,4">
            <TableRow
                android:gravity="center"
                android:layout_marginTop="20dp">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="55dp"
                    android:src="@drawable/water_percent" />
                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/weather_windy" />
                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/eye_outline" />
                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/gauge" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <TextView
                    android:id="@+id/humidty"
                    android:height="40dp"
                    android:textColor="@color/white"
                    android:text="e8%"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:gravity="center">
                </TextView>
                <TextView
                    android:id="@+id/wind"
                    android:height="40dp"
                    android:textColor="@color/white"
                    android:text="e.05mph"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:gravity="center">
                </TextView>
                <TextView
                    android:id="@+id/visibility"
                    android:height="40dp"
                    android:textColor="@color/white"
                    android:text="e.94mi"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:gravity="center">
                </TextView>
                <TextView
                    android:id="@+id/pressure"
                    android:height="40dp"
                    android:textColor="@color/white"
                    android:text="2e.88inHg"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:gravity="center">
                </TextView>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <TextView
                    android:height="30dp"
                    android:textColor="@color/dot_grey"
                    android:text="Humidity"
                    android:textSize="15dp"
                    android:gravity="center">
                </TextView>
                <TextView
                    android:height="30dp"
                    android:textColor="@color/dot_grey"
                    android:text="Wind Speed"
                    android:textSize="15dp"
                    android:gravity="center">
                </TextView>
                <TextView
                    android:height="30dp"
                    android:textColor="@color/dot_grey"
                    android:text="Visibility"
                    android:textSize="15dp"
                    android:gravity="center">
                </TextView>
                <TextView
                    android:height="30dp"
                    android:textColor="@color/dot_grey"
                    android:text="Pressure"
                    android:textSize="15dp"
                    android:gravity="center">
                </TextView>
            </TableRow>
        </TableLayout>
    </androidx.cardview.widget.CardView>

